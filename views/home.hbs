<div class="header">
    <h2 id="title">{{heading}}</h2>
    
    <form id="deleteActor" action="/search" method="POST">
        <input id="search-input" name="name" type="text"/>
        <button class="btn" type="button" onclick="toggleInsert()">Add</button>
        <button class="btn" type="submit">Search</button>
    </form>
</div>

<div class="add-actor-section">
    <span id="add-actor-error" style="display: none;">Error: Artist name and description must be less than 40 characters.</span>
    
    
    <form id="addActor" style="display: none;" action="/add" method="POST" onsubmit="return validateActor(event)">
    
        <input id="name" name="name" placeholder="Artist Name" type="text" />
        <br>
        <input id="description" name="description" placeholder="About artist" type="text" />
        <br>
        <input id="avatar" name="avatar" placeholder="Image url" type="text" />
        <br>
        <button id="addActorBtn" class="btn" type="submit">Add</button>
    </form>

</div>

{{#if artists}}
    <div class="flex-container" id="artist-table">
        {{#each artists}}
            <div id={{this.id}} class="actor-flex-1 actor-element">
                <img class="actor-avatar" src={{this.avatar}}>
                <div class="actor_details">
                    <span class="actor_name">{{this.name}}<br></span>
                    <span class="desc_of_actor">{{this.description}}</span></div>
                <div class="delete">
                    <form id="deleteActor" action="/delete/{{this.id}}" method="GET">
                        <button value={{this.id}}>Delete</button>
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div id="empty-table">
        <span>Oops, nothing found! <br>Try refining your search, or adding a new artist.</span>
    </div>
{{/if}}



